= form_for [:admin, @user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :user_pic
    = f.text_field :user_pic
  .field
    = f.label :stripe_id
    = f.text_field :stripe_id
  .field
    = f.label :stripe_tok
    = f.text_field :stripe_tok
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
